{
  "permissions": {
    "deny": [
      "Bash(rm -rf *)",
      "Bash(rm -rf /)",
      "Bash(*--force*)",
      "Bash(*--hard*)",
      "Bash(wrangler deploy*)",
      "Bash(npm run deploy*)",
      "Bash(wrangler d1 execute*--remote*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npm run typecheck 2>&1 | head -20 || true"
          }
        ]
      }
    ]
  }
}
